CREATE TABLE Teachers(
  teacher_id INTEGER PRIMARY KEY,
  name TEXT,
  surname TEXT)
 
CREATE TABLE Groups(
  group_id INTEGER PRIMARY KEY,
  group_name TEXT,
  count_students INTEGER,
  teacher_id INTEGER,
  FOREIGN_KEY (teacher_id) REFERENCES Teachers(teacher_id)
)

